<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      prefHeight="200.0" prefWidth="600.0">
    <GridPane>
        <Label GridPane.rowIndex="0" GridPane.columnIndex="0">Название</Label>
        <TextField fx:id="name" GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <Label GridPane.rowIndex="2" GridPane.columnIndex="0">Цвет</Label>
        <ColorPicker fx:id="color" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>
    <Button fx:id="save" text="Сохранить" />

</VBox>
